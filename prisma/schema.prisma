generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  loginMode    String   // baseline | mva
  createdAt    DateTime @default(now())

  loginAttempts LoginAttempt[]
}

model LoginAttempt {
  id        String   @id @default(uuid())
  userId    String
  origin    String   // real | static
  submitted Boolean
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}
