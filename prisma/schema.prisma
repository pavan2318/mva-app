generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  loginMode    LoginMode
  badgeSecret  String?
  createdAt    DateTime @default(now())

  sessions     Session[]
  logs         ExperimentLog[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  nonce     String
  pageType  PageType
  dynamicBadge Json?
  used      Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  log       ExperimentLog?
}

model ExperimentLog {
  id              String       @id @default(uuid())
  userId          String
  sessionId       String       @unique
  condition       LoginMode
  pageType        PageType
  decisionType    DecisionType
  timeToDecision  Int?
  confidenceScore Int?
  createdAt       DateTime     @default(now())

  user    User    @relation(fields: [userId], references: [id])
  session Session @relation(fields: [sessionId], references: [id])
}

enum LoginMode {
  traditional
  mva
}

enum PageType {
  real
  phishing
}

enum DecisionType {
  SUBMIT
  CANCEL
  TIMEOUT
}
